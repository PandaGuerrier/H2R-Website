<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Harcèlement2Rue</title>
  @entryPointStyles('app')
  @entryPointScripts('app')
  <link rel="stylesheet" type="text/css" href="https://cdn.jsdelivr.net/npm/toastify-js/src/toastify.min.css">
  <script type="text/javascript" src="https://cdn.jsdelivr.net/npm/toastify-js"></script>
  <script src="https://www.google.com/recaptcha/api.js" async defer></script>
</head>
<body>
  <main class="h-[100vh]">
	@!navbar()
                      <!-- Header -->

    <div class="min-h-full flex items-center justify-center py-12 px-4 sm:px-6 lg:px-8 z-30">
        <div class="max-w-md w-full space-y-8 z-30 bg-white border p-10 rounded-md">
          <div>
            <h2 class="mt-6 text-center text-3xl tracking-tight font-bold text-purple-500">Connexion</h2>
            <p class="mt-2 text-center text-sm text-black">
              Ou
              <a href="/auth/register" class="font-medium text-purple-300 hover:text-purple-400 duration-200"> je n'ai pas de compte </a>
            </p>
          </div>

                  <!-- Début du form -->
          
     <form id="demo-form" class="mt-8 space-y-6" action="{{ route('login') }}" method="POST">
      <div class="rounded-md shadow-sm -space-y-px">       
              @if(flashMessages.has('notification'))
              @!component('components/actionbar', {
                 type: 'error',
                 text: flashMessages.get('notification'),
               })
             @endif               
             <div class="mb-5">
              <label for="email" class="block text-sm font-medium text-purple-500">Email</label>
              <div class="relative mt-1 rounded-md shadow-sm">
                <input type="email" name="email" class="block w-full rounded-full border-gray-200 pr-12 focus:ring-purple-500 focus:ring-offset-purple-300 sm:text-sm">
              </div>
              @if(flashMessages.has('errors.email'))
              <h1 class="text-red-500 text-sm">{{ flashMessages.get('errors.email') }}</h1>
             @endif 
            </div>
              <div class="mt-5">
                <label for="price" class="block text-sm font-medium text-purple-500">Mot de passe</label>
                <div class="relative mt-1 rounded-full shadow-sm">
                  <input type="password" name="password" class="block w-full rounded-full border-gray-200 pr-12 focus:ring-purple-500 focus:ring-offset-purple-300 sm:text-sm">
                </div>
                @if(flashMessages.has('errors.password'))
                <h1 class="text-red-500 text-sm">{{ flashMessages.get('errors.password') }}</h1>
               @endif 
              </div>
            </div>

              <button id="login-button" data-callback="onSubmit" data-sitekey="6Le_gYQiAAAAAFuNVAqShsTnDGOskGgmqW3QL6kx" class="g-recaptcha duration-200 group relative w-full flex justify-center py-2 px-4 border border-transparent text-sm font-medium rounded-full text-white bg-purple-700 hover:bg-purple-600 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-purple-700">
                <span class="absolute left-0 inset-y-0 flex items-center pl-3">
                  <!-- Heroicon name: solid/lock-closed -->
                  <svg width="24" height="24" viewBox="0 0 12 12" fill="none" xmlns="http://www.w3.org/2000/svg">
                    <path d="M8 10.5V9.5C8 8.96957 7.78929 8.46086 7.41421 8.08579C7.03914 7.71071 6.53043 7.5 6 7.5H2.5C1.96957 7.5 1.46086 7.71071 1.08579 8.08579C0.710714 8.46086 0.5 8.96957 0.5 9.5V10.5" stroke="white" stroke-width="0.5" stroke-linecap="round" stroke-linejoin="round"/>
