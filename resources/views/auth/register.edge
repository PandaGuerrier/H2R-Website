<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Mineschool</title>
  @entryPointStyles('app')
  @entryPointScripts('app')
  <link rel="stylesheet" type="text/css" href="https://cdn.jsdelivr.net/npm/toastify-js/src/toastify.min.css">
  <script type="text/javascript" src="https://cdn.jsdelivr.net/npm/toastify-js"></script>
  <script src="https://www.google.com/recaptcha/api.js" async defer></script>
</head>
<body>
  <main class="h-[100vh] bg-sky-800">
	@!navbar()
                      <!-- Header -->

    <div class="min-h-full flex items-center justify-center py-12 px-4 sm:px-6 lg:px-8 z-30">
        <div class="max-w-md w-full space-y-8 z-30 bg-sky-900 p-10 rounded-md">
          <div>
            @!component('svg/logo', {
              classe: 'mx-auto',
            })
            <h2 class="mt-6 text-center text-3xl tracking-tight font-bold text-sky-300">Inscription</h2>
            <p class="mt-2 text-center text-sm text-white">
              Ou
              <a href="/auth/login" class="font-medium text-blue-200 hover:text-blue-300 duration-200"> j'ai déjà un compte </a>
            </p>
          </div>

                  <!-- Début du form -->
          
     <form id="demo-form" class="mt-8 space-y-6" action="{{ route('register') }}" method="POST">
      <div class="rounded-md shadow-sm space-y-5">       
              @if(flashMessages.has('notification'))
              @!component('components/actionbar', {
                 type: 'error',
                 text: flashMessages.get('notification'),
               })
             @endif  
             <div>
              <label for="username" class="block text-sm font-medium text-white">Pseudo</label>
              <div class="relative mt-1 rounded-md shadow-sm">
                <input type="text" name="username" class="block w-full rounded-md border-gray-300 pr-12 focus:border-sky-700 focus:ring-sky-700 sm:text-sm">
              </div>
              @if(flashMessages.has('errors.username'))
              <h1 class="text-red-500 text-sm">{{ flashMessages.get('errors.username') }}</h1>
             @endif 
            </div>             
             <div>
              <label for="email" class="block text-sm font-medium text-white">Email</label>
              <div class="relative mt-1 rounded-md shadow-sm">
                <input type="email" name="email" class="block w-full rounded-md border-gray-300 pr-12 focus:border-sky-700 focus:ring-sky-700 sm:text-sm">
              </div>
              @if(flashMessages.has('errors.email'))
              <h1 class="text-red-500 text-sm">{{ flashMessages.get('errors.email') }}</h1>
             @endif 
            </div>
              <div>
                <label for="password" class="block text-sm font-medium text-white">Mot de passe</label>
                <div class="relative mt-1 rounded-md shadow-sm">
                  <input type="password" name="password" class="block w-full rounded-md border-gray-300 pr-12 focus:border-sky-700 focus:ring-sky-700 sm:text-sm">
                </div>
                @if(flashMessages.has('errors.password'))
                <h1 class="text-red-500 text-sm">{{ flashMessages.get('errors.password') }}</h1>
               @endif 
              </div>
              <div>
                <label for="password_confirmation" class="block text-sm font-medium text-white">Répétez le mot de passe</label>
                <div class="relative mt-1 rounded-md shadow-sm">
                  <input type="password" name="password_confirmation" class="block w-full rounded-md border-gray-300 pr-12 focus:border-sky-700 focus:ring-sky-700 sm:text-sm">
                </div>
                @if(flashMessages.has('errors.password_confirmation'))
                <h1 class="text-red-500 text-sm">{{ flashMessages.get('errors.password_confirmation') }}</h1>
               @endif 
              </div>
            </div>

