</head>

<body class="">
  <main class="h-[100vh]">
    @!navbar()
    <video id="background-video" autoplay loop muted class="fixed mt-5">
      <source src="/videos/background.mp4" type="video/mp4">
    </video>
    <div class="flex items-center justify-center sm:items-stretch sm:justify-center h-3/4">
      <div class="flex w-full min-h-full items-center justify-center py-12 px-4 z-30 2xl:ml-52 lg:ml-32">
        <div class="w-full space-y-4 z-30 pt-24 rounded-md flex-row justify-end items-end">
          <div class="ml-3 space-y-4">
            <h1 class="text-5xl 2xl:text-7xl text-white">Harcèlement de rue</h1>
            <p class="text-xl md:text-3xl text-white">Osez <span class="typed-text text-purple-500"></span></p>
          </div>
          <div class="mt-5 left-0 w-1/4 flex items-start justify-start space-x-5">
            <a href="#temoignages"
              class="text-purple-500 hover:bg-purple-300 focus:outline-none focus:ring-2 focus:ring-purple-500 focus:ring-offset-2 focus:ring-offset-purple-300 duration-200 px-4 py-3 rounded-full text-sm font-medium">Témoignages</a>
            <a href="#posts"
              class="bg-purple-500 text-white hover:bg-purple-400 focus:outline-none focus:ring-2 focus:ring-purple-500 focus:ring-offset-2 focus:ring-offset-purple-300 duration-200 px-4 py-3 rounded-full text-sm font-medium">Aides</a>
          </div>
        </div>
        <div class="hidden w-full lg:block flex-row items-center justify-center ml-96">
          @!component('svg/logoGrand', {
          classe: 'mt-32'
          })
        </div>
      </div>
    </div>
    <p id="posts" class="mb-10 text-white">#post</p>
    <div class="relative flex items-center justify-center pt-5 bg-white min-h-max w-full">
        @!component('svg/banner')
        <div class="absolute w-full h-full">
          <div class="flex-col flex items-center md:space-y-5 mt-2">
            <p class="md:text-5xl text-gray-700">Quelques bases sur <span class="text-purple-600">l’harcèlements de rue</span></p>
            <p class="text-xs md:text-lg text-gray-500 italic mb-5">Lisez nos {{ posts.length }} posts pour en découvrir plus</p>
            <div class="w-full h-full">
            <div class="mx-auto border-md w-full lg:ml-20 md:ml-10 ml-10 overflow-y-hidden"> 
              <div class="overflow-x-scroll overflow-y-hidden space-x-5 scrollbar">
                  <div class="flex flex-col m-auto">
                          <div class="flex overflow-x-auto">
                            <div class="flex flex-nowrap">
                              @each(post in posts)
                                <div class="inline-block px-3">
                                  <div class="w-80 h-full max-w-xs p-5 flex flex-col items-center overflow-hidden rounded-lg shadow-md bg-white hover:shadow-xl transition-shadow duration-300 ease-in-out border">
                                      <h1 class="text-xl text-purple-500 text-center">{{ post.title }}</h1>
                                      <div class="h-80 w-5/6 mt-4">
                                        <span class="relative text-ellipsis max-h-max">{{{ post.description }}}</span>
                                        <p>...</p>
                                      </div>
                                      <div class="flex items-end justify-center h-full">
                                        <a href="/posts/{{ post.id }}" class="shadow-md text-purple-500 hover:bg-purple-300 focus:outline-none focus:ring-2 focus:ring-purple-500 focus:ring-offset-2 focus:ring-offset-purple-300 duration-200 px-3 py-2 rounded-full text-sm font-medium">Continuer à lire</a>
                                      </div>
                                  </div>
                                </div>
                              @endeach
                            </div>
                          </div>
                    </div>
              </div>
            </div>
          </div>
          </div>
        </div>
      </div>
    <p id="temoignages" class="mb-10 text-white">#temoignages</p>
    <div class="relative flex-row items-center justify-center pt-5 bg-purple-400 min-h-max w-full pb-10 mt-10">
      <div class="flex-col flex items-center justify-center space-y-2">
            <p class="text-lg md:text-5xl text-white">Pourquoi attendre avant d'agir ?</p>
            <p class="text-xs md:text-lg text-gray-300 italic mx-5 text-center">Voici quelques témoignages pour différencier de l’harcèlement de rue</p>
            <h1 class="absolute text-9xl text-white mb-5 max-w-min text-ellipsis">TÉMOIGNAGES</h1>
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-5 mx-auto mb-96 place-items-stretch"> 
            @each(temoignage in temoignages)
              @!component('components/form/modalTemoignage', {
                  title: temoignage.title,
                  content: temoignage.text,
                  type: "témoignage"
              })
            @endeach
            </div>
            <p id="definitions" class="text-white links">#definitions</p>
      </div>
    </div>
    <div class="relative flex-row z-10 items-center justify-center pt-5 min-h-max w-full pb-10">
      <div class="flex-col flex items-center justify-center space-y-2">
            <p class="text-lg md:text-5xl text-black">Vous voulez devenir un <span class="text-purple-500">expert</span> ?</p>
            <p class="text-xs md:text-lg text-gray-400 italic text-center">Voici quelques définitions pour vous expertiser dans ce domaine</p>
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-5 mx-auto mb-96 place-items-stretch"> 
            @each(definition in definitions)
            <div class="bg-white h-full border border-purple-200 hover:border-purple-400 transition duration-300 rounded-md m-5">
              <div class="p-5 h-full flex flex-col justify-between">
                <div class="flex flex-col overflow-hidden gap-4">
                  <div class="flex justify-between">
                    <div class="space-y-3 w-full flex-col flex items-center justify-center">
                      <h2 class="font-medium text-4xl lg:text-lg text-purple-400">{{ definition.title }}</h2>
                      <h2 class="font-small text-gray-500 lg:text-lg">{{ definition.content }}</h2>
                    </div>   
                  </div>
                </div>
              </div>
            </div>
            @endeach
            </div>
      </div>
    </div>
    <div class="relative items-center justify-center min-h-max w-full bg-purple-400">
      <div class="w-full h-full flex flex-row items-center justify-center space-y-2 p-5 lg:px-20 py-5">
        <div class="w-full h-full flex flex-row">
          <div class="hidden h-full lg:flex justify-center items-center mb-28">
            @!component('svg/logoGrand', {
            classe: 'mt-32'
            })
          </div>
            <div class="flex flex-col w-full space-y-4">
              <div class="w-full lg:w-3/4 h-full flex flex-col items-center justify-start lg:ml-16 text-gray-300">
                  <h1 class="text-xl text-white">Plan du site</h1>
                  <a href="/">Accueil</a>
                  <a href="/#posts">Posts</a>
                  <a href="/#temoignages">Témoignages</a>
                  <a href="/#definitions">Définitions</a>
                </div>
                <div class="w-full lg:w-1/2 flex items-center justify-center lg:items-end lg:justify-end text-white">
                  <h1 class="text-sm lg:text-lg">Fait par <span class="text-purple-600">Tiffany</span> et <a href="https://discord.gg/2wj9vYJPmq" target="_blank" class="text-purple-600">Jules</a> avec le <span class="animate-pulse animate-ping">❤️</span></h1>
                </div>
            </div>
         </div>
      </div>
    </div>
  </main>
</body>
<script>
const typedTextSpan = document.querySelector(".typed-text");
const cursorSpan = document.querySelector(".cursor");

const textArray = ["dénoncer.", "aider.", "intervenir.", "porter plainte.", "demander de l'aide.", "signaler."];
const typingDelay = 200;
const erasingDelay = 100;
const newTextDelay = 2000; // Delay between current and next text
let textArrayIndex = 0;
let charIndex = 0;

function type() {
  if (charIndex < textArray[textArrayIndex].length) {
    typedTextSpan.textContent += textArray[textArrayIndex].charAt(charIndex);
    charIndex++;
    setTimeout(type, typingDelay);
  } 
  else {
  	setTimeout(erase, newTextDelay);
  }
}

function erase() {
	if (charIndex > 0) {
    typedTextSpan.textContent = textArray[textArrayIndex].substring(0, charIndex-1);
    charIndex--;
    setTimeout(erase, erasingDelay);
  } 
  else {
    textArrayIndex++;
    if(textArrayIndex>=textArray.length) textArrayIndex=0;
    setTimeout(type, typingDelay + 1100);
  }
}

document.addEventListener("DOMContentLoaded", function() { // On DOM Load initiate the effect
  if(textArray.length) setTimeout(type, newTextDelay + 250);
});
</script>

</html>